<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="10dp"
    android:weightSum="1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/item_chat_message_sender_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kisung Tae" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="bottom"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:background="@drawable/shape_chat_message">

                <TextView
                    android:id="@+id/item_chat_message_message_value_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="dfa" />

            </LinearLayout>

            <TextView
                android:id="@+id/item_chat_message_time_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3:00pm" />


        </LinearLayout>


    </LinearLayout>


</LinearLayout>